<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="TemplateMo">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&display=swap" rel="stylesheet">

    <title>Stand Blog Dashboard</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
</head>
<body>
    <!-- Header -->
    <header class="">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand"
                   asp-area="Dashboard"
                   asp-controller="Home"
                   asp-action="Index">
                    <h2>Stand Blog<em>.</em></h2>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        @{
                            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                        }
                        <li class="nav-item @(currentController == "Home" && currentAction == "Index" ? "active" : "")">
                            <a class="nav-link"
                               asp-area="Dashboard"
                               asp-controller="Home"
                               asp-action="Index">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item @(currentController == "Blogs" ? "active" : "")">
                            <a class="nav-link"
                               asp-area="Dashboard"
                               asp-controller="Blogs"
                               asp-action="Index">
                                Blogs
                            </a>
                        </li>
                        <li class="nav-item @(currentController == "Categories" ? "active" : "")">
                            <a class="nav-link"
                               asp-area="Dashboard"
                               asp-controller="Categories"
                               asp-action="Index">
                                Categories
                            </a>
                        </li>
                        <li class="nav-item @(currentController == "Tags" ? "active" : "")">
                            <a class="nav-link"
                               asp-area="Dashboard"
                               asp-controller="Tags"
                               asp-action="Index">
                                Tags
                            </a>
                        </li>
                        <li class="nav-item @(currentController == "Comments" ? "active" : "")">
                            <a class="nav-link"
                               asp-area="Dashboard"
                               asp-controller="Comments"
                               asp-action="Index">
                                Comments
                            </a>
                        </li>
                        <li class="nav-item @(currentController == "Contacts" ? "active" : "")">
                            <a class="nav-link"
                               asp-area="Dashboard"
                               asp-controller="Contacts"
                               asp-action="Index">
                                Contacts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Index"
                               asp-area="">
                                <i class="fa fa-home"></i> Back to Site
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-area="Dashboard" asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="nav-link" style="background: none; border: none; cursor: pointer; padding: 0; color: #1e1e1e; font-size: 15px; font-weight: 800; text-transform: uppercase; letter-spacing: 0.5px;">
                                        <i class="fa fa-sign-out"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-area="Dashboard"
                                   asp-controller="Account"
                                   asp-action="Login">
                                    <i class="fa fa-sign-in"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Page Content -->
    <div class="heading-page">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)

    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/owl.js"></script>
    <script src="~/assets/js/slick.js"></script>
    <script src="~/assets/js/isotope.js"></script>
    <script src="~/assets/js/accordions.js"></script>
    
    <style>
        .navbar-nav .nav-item {
            margin-left: 10px;
        }
        .navbar-nav .nav-link i {
            margin-right: 5px;
        }
        .navbar-nav .nav-link button i {
            margin-right: 5px;
        }
    </style>
</body>
</html>