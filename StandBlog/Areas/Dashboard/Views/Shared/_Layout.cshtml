<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Stand Blog Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-md bg-light">
        <div class="container">
            <button aria-controls="navbarSupportedContent2" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-bs-target="#navbarSupportedContent2" data-bs-toggle="collapse" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent2">
                <ul class="navbar-nav ms-auto my-2 my-md-0">
                    <li class="nav-item ms-md-4">
                        <a class="nav-link"
                           asp-area="Dashboard"
                           asp-controller="Blogs"
                           asp-action="Index">
                            Blogs
                        </a>
                    </li>
                    <li class="nav-item ms-md-4">
                        <a class="nav-link"
                           asp-area="Dashboard"
                           asp-controller="BlogTags"
                           asp-action="Index">
                            Blog Tags
                        </a>
                    </li>
                    <li class="nav-item ms-md-4">
                        <a class="nav-link"
                           asp-area="Dashboard"
                           asp-controller="Categories"
                           asp-action="Index">
                            Categories
                        </a>
                    </li>
                    <li class="nav-item ms-md-4">
                        <a class="nav-link"
                           asp-area="Dashboard"
                           asp-controller="Comments"
                           asp-action="Index">
                            Comments
                        </a>
                    </li>
                    <li class="nav-item ms-md-4">
                        <a class="nav-link"
                           asp-area="Dashboard"
                           asp-controller="Contacts"
                           asp-action="Index">
                            Contacts
                        </a>
                    </li>
                    <li class="nav-item ms-md-4">
                        <a class="nav-link"
                           asp-area="Dashboard"
                           asp-controller="Tags"
                           asp-action="Index">
                            Tags
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item ms-md-4 d-none d-md-block">
                            <a class="btn btn-primary"
                               asp-area="Dashboard"
                               asp-controller="Account"
                               asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-md-4 d-none d-md-block">
                            <a class="btn btn-primary"
                               asp-area="Dashboard"
                               asp-controller="Account"
                               asp-action="Register">
                                Register
                            </a>
                        </li>
                        <li class="nav-item ms-md-4 d-none d-md-block">
                            <a class="btn btn-primary"
                               asp-area="Dashboard"
                               asp-controller="Account"
                               asp-action="Login">
                                Login
                            </a>
                        </li>
                    }
                </ul>
                </div>
            </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("Scripts", false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>