@model StandBlog.Models.Entities.Category

@{
    ViewData["Title"] = "Delete Category";
}

<section class="py-5">
    <div class="container">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Category</h4>
            </div>
            <div class="card-body">
                <p class="text-danger fw-bold">Are you sure you want to delete this category? This action cannot be undone.</p>

                <dl class="row mb-4">
                    <dt class="col-sm-3 fw-bold text-muted">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt class="col-sm-3 fw-bold text-muted">
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CreatedOn)
                    </dd>
                </dl>

                <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
