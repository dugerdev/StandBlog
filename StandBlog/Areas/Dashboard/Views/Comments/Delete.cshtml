@model StandBlog.Models.Entities.Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<section class="py-5">
    <div class="container">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Comment</h4>
            </div>
            <div class="card-body">
                <h5 class="text-danger mb-3">Are you sure you want to delete this comment?</h5>
                <dl class="row">
                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Message)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Message)</dd>

                    <dt class="col-sm-3 fw-bold">Blog</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Blog.Title)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.IsDeleted)</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsDeleted)
                        {
                            <span class="badge bg-danger">Deleted</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Active</span>
                        }
                    </dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.CreatedOn)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedOn)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.ModifiedOn)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ModifiedOn)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.DeletedOn)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DeletedOn)</dd>
                </dl>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
