@{
    ViewData["Title"] = "Admin Dashboard";
}

<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="sidebar-item">
                                <div class="sidebar-heading">
                                    <h2>Admin Dashboard</h2>
                                </div>
                                <div class="content">
                                    <p>Welcome to the Stand Blog administration panel. Manage your content from here.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-top: 40px;">
                        <div class="col-lg-3 col-md-6" style="margin-bottom: 30px;">
                            <div class="sidebar-item dashboard-card">
                                <div class="sidebar-heading">
                                    <h2>Blogs</h2>
                                </div>
                                <div class="content">
                                    <p>Manage all blog posts</p>
                                    <div class="main-button">
                                        <a asp-controller="Blogs" asp-action="Index">Manage Blogs</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6" style="margin-bottom: 30px;">
                            <div class="sidebar-item dashboard-card">
                                <div class="sidebar-heading">
                                    <h2>Categories</h2>
                                </div>
                                <div class="content">
                                    <p>Organize blog categories</p>
                                    <div class="main-button">
                                        <a asp-controller="Categories" asp-action="Index">Manage Categories</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6" style="margin-bottom: 30px;">
                            <div class="sidebar-item dashboard-card">
                                <div class="sidebar-heading">
                                    <h2>Comments</h2>
                                </div>
                                <div class="content">
                                    <p>View & moderate comments</p>
                                    <div class="main-button">
                                        <a asp-controller="Comments" asp-action="Index">Manage Comments</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6" style="margin-bottom: 30px;">
                            <div class="sidebar-item dashboard-card">
                                <div class="sidebar-heading">
                                    <h2>Contacts</h2>
                                </div>
                                <div class="content">
                                    <p>Check contact messages</p>
                                    <div class="main-button">
                                        <a asp-controller="Contacts" asp-action="Index">View Contacts</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-top: 40px;">
                        <div class="col-lg-3 col-md-6" style="margin-bottom: 30px;">
                            <div class="sidebar-item dashboard-card">
                                <div class="sidebar-heading">
                                    <h2>Tags</h2>
                                </div>
                                <div class="content">
                                    <p>Manage blog tags</p>
                                    <div class="main-button">
                                        <a asp-controller="Tags" asp-action="Index">Manage Tags</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
