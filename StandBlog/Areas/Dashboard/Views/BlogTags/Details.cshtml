@model StandBlog.Models.Entities.BlogTag

@{
    ViewData["Title"] = "Blog Tag Details";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Blog Tag Details</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4 fw-semibold">
                                @Html.DisplayNameFor(model => model.Blog)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Blog.Title)
                            </dd>

                            <dt class="col-sm-4 fw-semibold">
                                @Html.DisplayNameFor(model => model.Tag)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Tag.Name)
                            </dd>

                            <dt class="col-sm-4 fw-semibold">
                                @Html.DisplayNameFor(model => model.CreatedOn)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CreatedOn)
                            </dd>
                        </dl>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
