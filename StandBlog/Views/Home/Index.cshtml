@model IEnumerable<Blog>

<!-- Banner Starts Here -->
@await Component.InvokeAsync("Banner")
<!-- Banner Ends Here -->

<section class="blog-posts">
    <div class="container">
        <div class="row">

            <!-- Blog listesi -->
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="~/assets/images/blog-post-01.jpg" alt="">
                                    </div>
                                    <div class="down-content">
                                        <span>@item.Category.Name</span>
                                        <a asp-controller="Blogs"
                                           asp-action="Detail"
                                           asp-route-id="@item.Id">
                                            <h4>@item.Title</h4>
                                        </a>
                                        <ul class="post-info">
                                            <li><a href="#">@item.CreatedOn.ToLocalTime()</a></li>
                                            <li><a href="#">@item.Comments.Count Comments</a></li>
                                        </ul>
                                        <p>@item.Post.Substring(0, 255) ...</p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-6">
                                                    @await Component.InvokeAsync("BlogTags", new { id = item.Id })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <partial name="_Sidebar" />
            </div>

        </div>
    </div>
</section>
