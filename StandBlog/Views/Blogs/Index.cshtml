@model IEnumerable<Blog>

<!-- Banner Starts Here -->
<div class="heading-page header-text">
    <section class="page-heading">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-content">
                        <h4>Recent Posts</h4>
                        <h2>Our Recent Blog Entries</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- Banner Ends Here -->

<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-6">
                                    <div class="blog-post">
                                        <div class="blog-thumb">
                                            <a asp-controller="Blogs" asp-action="Detail" asp-route-id="@item.Id">
                                                @{
                                                    // Blog Entries sayfasında blog-thumb görselleri kullan
                                                    string imagePath = "/assets/images/blog-thumb-01.jpg";
                                                    if (!string.IsNullOrEmpty(item.ImageUrl))
                                                    {
                                                        // ImageUrl'den görsel numarasını çıkar (blog-post-01.jpg -> blog-thumb-01.jpg)
                                                        var imageName = item.ImageUrl.Split('/').LastOrDefault() ?? "";
                                                        if (imageName.Contains("blog-post-"))
                                                        {
                                                            var imageNumber = imageName.Replace("blog-post-", "").Replace(".jpg", "");
                                                            imagePath = $"/assets/images/blog-thumb-{imageNumber}.jpg";
                                                        }
                                                        else if (imageName.Contains("blog-thumb-"))
                                                        {
                                                            imagePath = "/assets/images/" + imageName;
                                                        }
                                                        else
                                                        {
                                                            // Fallback
                                                            imagePath = "/assets/images/blog-thumb-01.jpg";
                                                        }
                                                    }
                                                }
                                                <img src="@imagePath" alt="@item.Title">
                                            </a>
                                        </div>
                                        <div class="down-content">
                                            <span>@item.Category?.Name</span>
                                            <a asp-controller="Blogs"
                                               asp-action="Detail"
                                               asp-route-id="@item.Id">
                                                <h4>@item.Title</h4>
                                            </a>
                                            <ul class="post-info">
                                                <li><a href="#">@item.CreatedOn.ToLocalTime().ToString("MMMM dd, yyyy")</a></li>
                                                <li><a href="#">@(item.Comments?.Count ?? 0) Comments</a></li>
                                            </ul>
                                            @{
                                                var plainText = System.Text.RegularExpressions.Regex.Replace(item.Post ?? "", "<.*?>", "");
                                                var preview = plainText.Length > 150 ? plainText.Substring(0, 150) + " ..." : plainText;
                                            }
                                            <p>@preview</p>
                                            <div class="post-options">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        @await Component.InvokeAsync("BlogTags", new { id = item.Id })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            
                            @if (ViewBag.TotalPages > 1)
                            {
                                <div class="col-lg-12">
                                    <ul class="page-numbers">
                                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                        {
                                            <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                                                <a asp-action="Index" asp-route-page="@i">@i</a>
                                            </li>
                                        }
                                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                        {
                                            <li>
                                                <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">
                                                    <i class="fa fa-angle-double-right"></i>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="down-content text-center" style="padding: 40px;">
                                        <h4>No blog posts available</h4>
                                        <p>Check back later for new content!</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <partial name="_Sidebar" />
            </div>
        </div>
    </div>
</section>

