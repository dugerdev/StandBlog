@model Blog

@if (Model == null)
{
    <section class="blog-posts grid-system">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog-post">
                        <div class="down-content text-center" style="padding: 40px;">
                            <h4>Blog post not found</h4>
                            <p>The blog post you're looking for doesn't exist or has been removed.</p>
                            <a asp-controller="Home" asp-action="Index" class="main-button">Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
<!-- Banner Starts Here -->
<div class="heading-page header-text">
    <section class="page-heading">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-content">
                        <h4>Post Details</h4>
                        <h2>Single blog post</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- Banner Ends Here -->

<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <!-- Blog detayı -->
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="blog-post">
                                <div class="blog-thumb">
                                    @{
                                        string imagePath;
                                        if (string.IsNullOrEmpty(Model.ImageUrl))
                                        {
                                            imagePath = "/assets/images/blog-post-02.jpg";
                                        }
                                        else if (Model.ImageUrl.StartsWith("~/"))
                                        {
                                            imagePath = Model.ImageUrl.Replace("~/", "/");
                                        }
                                        else if (Model.ImageUrl.StartsWith("/"))
                                        {
                                            imagePath = Model.ImageUrl;
                                        }
                                        else
                                        {
                                            imagePath = "/assets/images/" + Model.ImageUrl;
                                        }
                                    }
                                    <img src="@imagePath" alt="@Model.Title">
                                </div>
                                <div class="down-content">
                                    <span>@Model.Category?.Name</span>
                                    <h4>@Model.Title</h4>
                                    <ul class="post-info">
                                        <li>@Model.CreatedOn.ToLocalTime().ToString("MMMM dd, yyyy")</li>
                                        <li>@(Model.Comments?.Count ?? 0) Comments</li>
                                    </ul>
                                    <div class="blog-content">
                                        @Html.Raw(Model.Post)
                                    </div>
                                    <div class="post-options">
                                        <div class="row">
                                            <div class="col-6">
                                                @await Component.InvokeAsync("BlogTags", new { id = Model.Id })
                                            </div>
                                            <div class="col-6">
                                                <ul class="post-share">
                                                    <li><i class="fa fa-share-alt"></i></li>
                                                    <li><a href="#">Facebook</a>,</li>
                                                    <li><a href="#">Twitter</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Blog yorumları -->
                        <div class="col-lg-12">
                            @await Component.InvokeAsync("BlogComments", new { id = Model.Id })
                        </div>

                        <!-- Yorum ekleme formu -->
                        <div class="col-lg-12">
                            <partial name="_CommentAdd" model="new Comment { BlogId = Model.Id }" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <partial name="_Sidebar" />
            </div>
        </div>
    </div>
</section>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    }
    @if (!isAuthenticated)
    {
        <script>
            // Form gönderimini engelle - sadece giriş yapmamış kullanıcılar için
            document.addEventListener('DOMContentLoaded', function() {
                var commentForm = document.getElementById('commentForm');
                if (commentForm) {
                    commentForm.addEventListener('submit', function(e) {
                        e.preventDefault();
                        alert('Please login to leave a comment.');
                        window.location.href = '@Url.Action("Login", "Account")';
                        return false;
                    });
                }
            });
        </script>
    }
}
