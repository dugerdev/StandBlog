<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="TemplateMo">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&display=swap" rel="stylesheet">

    <title>Stand Blog</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
</head>

<body>
    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- Header -->
    <header class="">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand"
                   asp-controller="Home"
                   asp-action="Index"><h2>Stand Blog<em>.</em></h2></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        @{
                            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                        }
                        <li class="nav-item @(currentController == "Home" && currentAction == "Index" ? "active" : "")">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                                @if (currentController == "Home" && currentAction == "Index")
                                {
                                    <span class="sr-only">(current)</span>
                                }
                            </a>
                        </li>
                        <li class="nav-item @(currentController == "About" ? "active" : "")">
                            <a class="nav-link"
                               asp-controller="About"
                               asp-action="Index">
                                About Us
                            </a>
                        </li>
                        <li class="nav-item @(currentController == "Blogs" && currentAction == "Index" ? "active" : "")">
                            <a class="nav-link"
                               asp-controller="Blogs"
                               asp-action="Index">
                                Blog Entries
                            </a>
                        </li>
                        <li class="nav-item @(currentController == "Contact" ? "active" : "")">
                            <a class="nav-link"
                               asp-controller="Contact"
                               asp-action="Us">
                                Contact Us
                            </a>
                        </li>
                        @{
                            var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
                        }
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="nav-link" style="background: none; border: none; cursor: pointer; color: #1e1e1e; font-size: 15px; font-weight: 800; text-transform: uppercase; letter-spacing: 0.5px;">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item @(currentController == "Account" && currentAction == "Login" ? "active" : "")">
                                <a class="nav-link"
                                   asp-controller="Account"
                                   asp-action="Login">
                                    Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Page Content -->
    @RenderBody()
    
    @RenderSection("Scripts", required: false)

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="social-icons">
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Behance</a></li>
                        <li><a href="#">Linkedin</a></li>
                        <li><a href="#">Dribbble</a></li>
                    </ul>
                </div>
                <div class="col-lg-12">
                    <div class="copyright-text">
                        <p>
                            Copyright 2020 Stand Blog Co.

                            | Design: <a rel="nofollow" href="https://templatemo.com" target="_parent">TemplateMo</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/owl.js"></script>
    <script src="~/assets/js/slick.js"></script>
    <script src="~/assets/js/isotope.js"></script>
    <script src="~/assets/js/accordions.js"></script>

    <script language="text/Javascript">

        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
        function clearField(t) {                   //declaring the array outside of the
            if (!cleared[t.id]) {                      // function makes it static and global
                cleared[t.id] = 1;  // you could use true and false, but that's more typing
                t.value = '';         // with more chance of typos
                t.style.color = '#fff';
            }
        }
    </script>

</body>
</html>