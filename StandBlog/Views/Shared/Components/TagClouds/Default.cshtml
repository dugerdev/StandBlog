@model IEnumerable<Tag>

<div class="sidebar-item tags">
    <div class="sidebar-heading">
        <h2>Tag Clouds</h2>
    </div>
    <div class="content">
        <ul>
            @foreach (Tag item in Model)
            {
                <li>
                    <a asp-controller="Blogs"
                       asp-action="Tag"
                       asp-route-id="@item.Id">
                        @item.Name
                    </a>
                </li>
            }
        </ul>
    </div>
</div>